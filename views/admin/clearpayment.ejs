<!DOCTYPE html>
<html>
<head>
<style>
ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
  background-color: #105A43;
}

li {
  float: left;
  width: 25%;
}

li a {
  display: block;
  color: white;
  text-align: center;
  padding: 14px 25px;
  text-decoration: none;
}

li a:hover {
  background-color: #06261D;
}
</style>
</head>
<body>
	<table border="0" width="100%">
		
		<tr class="heading">
			<td>
				<p><font style="font-style: italic;" color="#313D3A" size="8"><b>Scholarship Portal</b></font></p>
			</td>
		</tr>
		<tr>
			<td>
				<ul>
					<li><a href="/admin">Home</a></li>
					<li><a href="/admin/myaccount">My Account</a></li>
					<li><a href="/admin/clearpayment"> Admin Payment</a></li>
					<li><a href="/logout">Log Out</a></li>
				</ul>
			</td>
		</tr>
		
	</table>
	
	<table border="1" width="70%" align="center">
		<tr>
			<th align="center" width="20%">User Id</th>
			<th align="center" width="30%">User Name</th>
			<th align="center" width="30%">Salary</th>
			<th align="center" width="20%">Clear Comment</th>

		</tr>
	<% for(var i=0; i < users.length; i++){ %>
		<tr>
			<td align="center" width="20%"><%= users[i].userid %></td>
			<td align="center" width="30%"><%= users[i].username %></td>
			<td align="center" width="30%"><%= users[i].salary %></td>
			<td align="center" width="20%"><a href="/admin/clearpayment/<%= users[i].userid %>">Make Payment</a></td>
		</tr>
	<% } %>
		
	</table>




</body>
</html>